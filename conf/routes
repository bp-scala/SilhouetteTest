# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index
GET         /secured             controllers.Application.secured

GET         /signup         @controllers.authentication.SignUpController.signUpPage
POST        /signup         @controllers.authentication.SignUpController.signUp

GET         /signout        @controllers.authentication.SignOutController.signOut

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
